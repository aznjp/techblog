<section class = "your-new-post">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title"  class="form-control" rows="3" name="post-title" />
    </div>
    <div>
      <label for="post-blog">Blog Body</label>
      <textarea id="post-blog" name="post-blog" class="form-control" rows="20"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class = "your-post">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>