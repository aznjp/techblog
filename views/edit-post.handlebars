<article>
  <h2 class = "edit-post-h2">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <h3 class = "edit-post-h3">Edit Title</h3>
      <input name="post-title" type="text" class="form-control" rows="3" value="{{post.title}}" />
    </div>
    <div>
      <h3 class = "edit-post-h3">Edit Blog Body</h3>
      <textarea name ="post-blog" type ="text" class="form-control" rows="20">{{post.post_blog}}</textarea>
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" class="btn btn-danger delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <h3 class = "edit-post-h3">Add Comment</h3>
  <div>
    <textarea name="comment-body" class="form-control" rows="5"></textarea>
  </div>

  <div>
    <button type="submit" class ="btn btn-primary">Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
