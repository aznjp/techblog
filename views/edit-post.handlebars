<article>
  <h2 class = "edit-post-h2">
    Edit Post
  </h2>
  <form class="edit-post-form border border-dark container rounded card">
    <div>
      <h3 class = "edit-post-h3">Edit Title</h3>
      <input name="post-title" type="text" class="form-control" rows="3" value="{{post.title}}" />
    </div>
    <div>
      <h3 class = "edit-post-h3">Edit Blog Body</h3>
      <textarea name ="post-blog" type ="text" class="form-control" rows="10">{{post.post_blog}}</textarea>
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Update Post</button>
    <button type="button" class="btn btn-danger btn-block delete-post-btn mb-4">Delete Post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
